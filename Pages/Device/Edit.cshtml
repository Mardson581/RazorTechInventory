@page "{id:int}"
@model TechInventory.Pages.Device.EditModel
@{
    ViewData["Title"] = "Editar dispositivo";
}

<h2 class="mb-5">Editar Dispositivo</h2>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="Device.Name" class="me-3">Nome</label>
        <input asp-for="Device.Name" class="form-control" />
        <span asp-validation-for="Device.Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Device.DeviceType">Tipo de dispositivo</label>
        <select asp-for="Device.DeviceType" class="form-control" id="Size">
            <option value="">-- Escolha o tipo do dispositivo --</option>
            <option value="Desktop">Desktop</option>
            <option value="Notebook">Notebook</option>
            <option value="Keyboard">Teclado</option>
            <option value="Printer">Impressora</option>
            <option value="Toner">Toner</option>
            <option value="Scanner">Scanner</option>
            <option value="Switch">Switch</option>
            <option value="Router">Roteador</option>
            <option value="Modem">Modem</option>
        </select>
        <span asp-validation-for="Device.DeviceType" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Device.Status">Estado do disposivito</label>
        <select asp-for="Device.Status" class="form-control" id="Status">
            <option value="">-- Escolha o estado do dispositivo --</option>
            <option value="Ativo">Ativo</option>
            <option value="Defeituoso">Defeituoso</option>
            <option value="Descartado">Descartado</option>
        </select>
        <span asp-validation-for="Device.Status" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Device.DeviceModelId">Modelo do dispositivo</label>
        <select asp-for="Device.DeviceModelId" class="form-control" id="DeviceModelId">
            <option value="">-- Escolha o modelo do dispositivo --</option>
            @foreach (var deviceModel in Model.DeviceModels)
            {
                <option value="@deviceModel.DeviceModelId">@deviceModel.Name</option>
            }
        </select>
        <span asp-validation-for="Device.DeviceModelId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}