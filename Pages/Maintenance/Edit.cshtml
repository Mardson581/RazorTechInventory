@page "{id:int}"
@model TechInventory.Pages.Maintenance.EditModel
@{
    ViewData["Title"] = "Editar Manutenção";
}

<h2 class="mb-5">Editar Manutenção</h2>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="Record.DeviceId" class="mb-3">Dispositivo</label>
        <select asp-for="Record.DeviceId" class="form-control">
            <option value="@Model.Record.DeviceId">@Model.Record.Device.Name</option>

            @foreach (var device in Model.Devices)
            {
                <option value="@device.DeviceId">@device.Name</option>
            }
        </select>
        <span asp-validation-for="Record.DeviceId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Record.Description" class="mb-3">Descrição</label>
        <textarea asp-for="Record.Description" class="form-control" rows="3" cols="50">
            @Model.Record.Description
        </textarea>
        <span asp-validation-for="Record.Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Record.Data">Data da manutenção</label>
        <input type="date" asp-for="Record.Data" class="form-control" />
        <span asp-validation-for="Record.Data" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Record.Technician" class="mb-3">Técnico Responsável</label>
        <input asp-for="Record.Technician" class="form-control" value="@Model.Record.Technician" />
        <span asp-validation-for="Record.Technician" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-primary" value="Editar" />
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
