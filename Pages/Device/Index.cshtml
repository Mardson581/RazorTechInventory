@page
@model TechInventory.Pages.Device.IndexModel
@{
    ViewData["Title"] = "Dispositivos";
}

<div class="container d-flex justify-content-between align-items-center mb-5 mt-4">
    <h2>Dispositivos Cadastrados</h2>
    <a class="btn btn-primary" asp-page="Create">Cadastrar novo dispositivo</a>
</div>

@if (Model.Devices.Count == 0)
{
    <p class="mb-5">Nenhum dispositivo cadastrado</p>
}

@foreach (var device in Model.Devices)
{
    <div class="container">
        <div style="width: 60rem; padding: 10px 20px 10px 20px;" class="d-flex justify-content-between align-items-center mb-2 border border-secondary rounded">
            <h4 style="margin: 0; padding: 0;">@device.Name</h4>
            <p>Status: @device.Status</p>

            <div class="d-flex">
                <form class="me-2" method="post" asp-page="Delete" asp-route-id="@device.DeviceId">
                    <input type="submit" value="Excluir" class="btn btn-danger">
                </form>

                <form method="get" asp-page="Edit" asp-route-id="@device.DeviceId">
                    <input type="submit" value="Editar" class="btn btn-primary">
                </form>
            </div>
        </div>
    </div>
}
